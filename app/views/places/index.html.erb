<div class="container mt-5">
  <h1 class="mb-4">Places</h1>
  
  <% if @current_user == nil %>
    <div class="alert alert-warning" role="alert">
      Please log in first
    </div>
  <% else %>
    <ul class="list-unstyled">
      <% for place in @places %>
        <li class="mb-2">
          <a href="/places/<%= place["id"] %>" class="text-primary text-decoration-underline">
            <%= place["name"] %>
          </a>
        </li>
      <% end %>
    </ul>

    <p class="mt-3">
      <a href="/places/new" class="btn btn-primary">New place</a>
    </p>
  <% end %>
</div>